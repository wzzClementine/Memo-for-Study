/* pages/market/market.wxss */
.all{
  display: flex;
  flex-direction: column;
  background-color: #EDF0E6;
  width: 100%;
  height: 100%;
}
.topbar{
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #8FD6D0;
  color: white; 
  width: 100%;
  font-size: 15px;
}
.top{
  display: flex;
  flex-direction: column;
  width: 70%;
}
.ava{
  border-radius: 50%;
  border: 2px solid white;
  height: 180rpx;
  width: 180rpx;
  margin: 5%;
  margin-right: 1%;
  
}
.labelbar{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin: 2%;
  margin-left: 10%;
}
.icon{
  height: 50rpx;
  width: 10%;
}
.des{
  width: 20%;
  margin-left: 8%;
}
.des0{
  white-space: nowrap;
  margin-left: 2%;
}
.list{
  display: flex;
  flex-direction: column;
}
.item{
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid gainsboro;
  padding: 2%;
  background-color: #EDF0E6;
}
.cover{
  height: 200rpx;
  width: 300rpx;
  border: 1px solid #A9D609;
  border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10px;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
  margin-right: 5%;
}
.detail{
  display: flex;
  flex-direction: column;
}
.name{
  font-size: 15px;
  color: #8FD6D0;
}
.description{
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #8FD6D0;
  text-align: center;
  color: white;
  border-bottom-left-radius: 5px;
  border-bottom-right-radius: 5px;
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
}
.amount{
  font-size: 10px;
}
.rest{
  font-size: 10px;
  color: #8FD6D0;
  position: absolute;
  right: 3%;
}
.recordView{
  border-radius: 5px;
  color: #8FD6D0;
  white-space: nowrap; 
  font-size: 12px;
  padding: 2%;
}
.buttonR{
  border-radius: 5px;
  font-size: 15px;
  color: white;
  
  margin-top: 30%;
  background-color: #8FD6D0;
  padding: 3%;
}